Vagrant.configure("2") do |config|
  # --- Kali Linux VM ---
  config.vm.define "kali" do |kali|
    kali.vm.box = "kalilinux/rolling"
    kali.vm.box_version = "2025.3.0"
    kali.vm.network "private_network", ip: "192.168.33.10"
    kali.vm.synced_folder "git-task", "/home/vagrant/project" # git task
    kali.vm.synced_folder "nginx-task", "/home/vagrant/https" # nginx task
    kali.vm.synced_folder "defaultNginxConf", "/etc/defaultnginxconf" # nginx task
    kali.vm.synced_folder "wireshark", "/home/vagrant/server" # wireshark server
    kali.vm.provider "virtualbox" do |vb|
      vb.name = "KaliDesktop"
      vb.gui = true
      vb.memory = "4096"
      vb.cpus = 2
    end

    kali.vm.provision "shell", inline: <<-SHELL
      sudo apt-get update -y

      #vscode
      # sudo apt-get install -y wget gpg apt-transport-https software-properties-common
      # sudo rm -f /usr/share/keyrings/packages.microsoft.gpg
      # sudo rm -f /etc/apt/sources.list.d/vscode.list
      # wget -qO- https://packages.microsoft.com/keys/microsoft.asc | sudo gpg --dearmor -o /usr/share/keyrings/packages.microsoft.gpg
      # echo "deb [arch=amd64 signed-by=/usr/share/keyrings/packages.microsoft.gpg] https://packages.microsoft.com/repos/code stable main" | sudo tee /etc/apt/sources.list.d/vscode.list
      # sudo apt-get update -y
      # sudo apt-get install -y code

      #nginx
      sudo apt-get install -y nginx
      sudo systemctl enable nginx
      sudo systemctl start nginx

      #make secret file
      sudo mkdir -p /var/www/html
      echo "<p>secret123</p>" | sudo tee /var/www/html/secret.html > /dev/null
      sudo chmod 644 /var/www/html/secret.html
      echo "<p>this is unsafe http site</p><p>at night, the server logs whisper when no one is watching...</p>" | sudo tee /var/www/html/index.html > /dev/null
      sudo chmod 644 /var/www/html/index.html

      # certbot, or localhost counterpart mkcert
      wget https://github.com/FiloSottile/mkcert/releases/download/v1.4.4/mkcert-v1.4.4-linux-amd64
      sudo mv mkcert-v1.4.4-linux-amd64 /usr/local/bin/mkcert
      sudo chmod +x /usr/local/bin/mkcert

    SHELL
    kali.vm.provision "shell", name: "gkeyboard", privileged: false, path: "./scripts/keyboard.sh"
    kali.vm.provision "shell", name: "snort", privileged: false, path: "./scripts/snort.sh"
    kali.vm.provision "shell", name: "git-task", privileged: false, path: "./scripts/setup_git.sh"
  end

  # --- Ubuntu Server VM ---
  config.vm.define "ubuntu_server" do |server|
    server.vm.box = "ubuntu/jammy64"
    server.vm.network "public_network", ip: "192.168.33.11"
    server.vm.synced_folder "ubuntu", "/home/vagrant/server_project"
    server.vm.provider "virtualbox" do |vb|
      vb.name = "UbuntuServer"
      vb.gui = false
      vb.memory = "2048"
      vb.cpus = 1
    end
    server.vm.provision "shell", inline: <<-SHELL
      sudo apt-get update -y
      sudo apt-get install -y net-tools
    SHELL
  end
end
