Vagrant.configure("2") do |config|
  # --- Kali Linux VM ---
  config.vm.define "kali" do |kali|
    kali.vm.box = "kalilinux/rolling"
    kali.vm.box_version = "2023.4.0"
    kali.vm.network "private_network", ip: "192.168.33.10"
    kali.vm.synced_folder ".", "/home/vagrant/project"
    kali.vm.provider "virtualbox" do |vb|
      vb.name = "KaliDesktop"
      vb.gui = true
      vb.memory = "4096"
      vb.cpus = 2
    end

    kali.vm.provision "shell", inline: <<-SHELL
      set -e

      echo ">>> Fixing Kali repository keys and updating packages..."
      # --- Fix repository key issue ---
      sudo apt-key adv --keyserver keyserver.ubuntu.com --recv-keys ED65462EC8D5E4C5 || true
      sudo apt-get clean
      sudo apt-get update --fix-missing -y
      sudo apt-get upgrade -y

      # --- vscode ---
      sudo rm -f /usr/share/keyrings/packages.microsoft.gpg
      sudo rm -f /etc/apt/sources.list.d/vscode.list
      wget -qO- https://packages.microsoft.com/keys/microsoft.asc | sudo gpg --dearmor -o /usr/share/keyrings/packages.microsoft.gpg
      echo "deb [arch=amd64 signed-by=/usr/share/keyrings/packages.microsoft.gpg] https://packages.microsoft.com/repos/code stable main" | sudo tee /etc/apt/sources.list.d/vscode.list
      sudo apt-get update -y
      sudo apt-get install -y code

      # --- nginx ---
      sudo apt-get install -y nginx
      sudo systemctl enable nginx
      sudo systemctl start nginx

      # --- Keyboard (Finnish) ---
      sudo debconf-set-selections <<< "keyboard-configuration keyboard-configuration/layout select Finnish"
      sudo dpkg-reconfigure -f noninteractive keyboard-configuration
      sudo setupcon
      sudo sed -i 's/XKBLAYOUT=".*"/XKBLAYOUT="fi"/' /etc/default/keyboard

      # --- Secret file ---
      sudo mkdir -p /var/www/html
      echo "<p>secret123</p>" | sudo tee /var/www/html/secret.html > /dev/null
      sudo chmod 644 /var/www/html/secret.html

      # --- Certbot ---
      sudo apt-get install -y certbot

      # FLASK SERVER + CLIENT AUTO SETUP (FINAL VERSION)

      echo ">>> Installing Python, Flask, and Requests..."
      sudo apt-get install -y python3 python3-pip
      pip3 install flask requests

      # Wait until shared folder is synced
      echo "Waiting for /home/vagrant/project to sync..."
      for i in {1..30}; do
        if [ -f /home/vagrant/project/server.py ] && [ -f /home/vagrant/project/client.py ]; then
          echo "Project files found."
          break
        fi
        sleep 2
      done

      # --- Flask Server Service ---
      echo "[Unit]
Description=Flask Server
After=network.target

[Service]
ExecStart=/usr/bin/python3 /home/vagrant/project/server.py
WorkingDirectory=/home/vagrant/project
Restart=always
User=vagrant
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target" | sudo tee /etc/systemd/system/flask-server.service > /dev/null

      # --- Flask Client Service ---
      echo "[Unit]
Description=Flask Client Request Sender
After=flask-server.service

[Service]
ExecStart=/usr/bin/python3 /home/vagrant/project/client.py
WorkingDirectory=/home/vagrant/project
Restart=always
User=vagrant
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target" | sudo tee /etc/systemd/system/flask-client.service > /dev/null

      # --- Enable and start both Flask services ---
      sudo systemctl daemon-reload
      sudo systemctl enable flask-server flask-client
      sudo systemctl restart flask-server flask-client

      echo "Flask server and client services created and running!"
      # ======================================================
    SHELL
  end

  # --- Ubuntu Server VM ---
  config.vm.define "ubuntu_server" do |server|
    server.vm.box = "ubuntu/jammy64"
    server.vm.network "private_network", ip: "192.168.33.11"
    server.vm.synced_folder ".", "/home/vagrant/server_project"
    server.vm.provider "virtualbox" do |vb|
      vb.name = "UbuntuServer"
      vb.gui = false
      vb.memory = "2048"
      vb.cpus = 1
    end

    server.vm.provision "shell", inline: <<-SHELL
      sudo apt-get update -y
      sudo apt-get install -y net-tools
    SHELL
  end
end
